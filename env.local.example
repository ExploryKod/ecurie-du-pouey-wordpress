# ============================================
# Configuration Docker - Environnement Local
# ============================================
# Copiez ce fichier vers .env et remplissez les valeurs

# Ports
WORDPRESS_PORT=10004
PHPMYADMIN_PORT=8080

# Configuration MySQL
MYSQL_ROOT_PASSWORD=root_password_here
MYSQL_DATABASE=wordpress_local
MYSQL_USER=wordpress_user
MYSQL_PASSWORD=wordpress_password

# ============================================
# Configuration WordPress - Variables d'environnement
# ============================================
# Ces variables seront chargées par wp-config.php via load_env()

# Database Configuration (pour WordPress)
DB_NAME=wordpress_local
DB_USER=wordpress_user
DB_PASSWORD=wordpress_password
DB_HOST=db
DB_CHARSET=utf8
DB_COLLATE=

# WordPress Environment
WP_ENVIRONMENT_TYPE=local
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# Authentication Keys and Salts
# Générez ces clés sur: https://api.wordpress.org/secret-key/1.1/salt/
AUTH_KEY=your_auth_key_here
SECURE_AUTH_KEY=your_secure_auth_key_here
LOGGED_IN_KEY=your_logged_in_key_here
NONCE_KEY=your_nonce_key_here
AUTH_SALT=your_auth_salt_here
SECURE_AUTH_SALT=your_secure_auth_salt_here
LOGGED_IN_SALT=your_logged_in_salt_here
NONCE_SALT=your_nonce_salt_here
WP_CACHE_KEY_SALT=your_cache_key_salt_here

